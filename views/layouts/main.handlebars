    <a class="dropdown-item" href="/">Home</a>
    {{#unless no_com}}
    <a class="dropdown-item" href="/communities/create/new">Create Community</a>
    {{/unless}}
    {{#unless no_ques}}
    <a class="dropdown-item" href="/questions/create/new">Ask a Question</a>
    {{/unless}}
    {{#if session.userId}}
    <a class="dropdown-item" href="/users/{{session.userId}}">My Account</a>
    <a class="dropdown-item" href="/site/logout">Logout</a>
     {{else}}
    <a class="dropdown-item" href="/users/signup">Register</a>
    <a class="dropdown-item" href="/site/login">Login</a>
    {{/if}}
  </div>
</div>
