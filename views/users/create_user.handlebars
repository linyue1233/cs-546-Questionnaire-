<div>
    <h1 class="user-login">User Signup</h1>
    <form id="signup-form" action="/users" method="post" role="form" enctype="multipart/form-data">
    <div class="form-group">
        <label>First Name 
        <input type="text" id="firstName" name="firstName" placeholder="Enter your first name" value="{{body.firstName}}">
        </label>
        <br>
        </div>
        <div class="form-group">
        <label>Last Name
        <input type="text" id="lastName" name="lastName" placeholder="Enter your last name" value="{{body.lastName}}">
        </label>
        <br>
        </div>
        <div class="form-group">
        <label>Password* (Please enter at least 6 characters with no space)
        <input id="password" name="password" type="password" placeholder="Enter your desired password">
        </label>
        <br>
        </div>
        <div class="form-group">

        <label>Email Address
        <input type="text" id="emailAddress" name="emailAddress" placeholder="Enter your email address" value="{{body.emailAddress}}">
        </label>
        <br>
        </div>
        <div class="form-group">
        <label>Display Name
        <input type="text" id="displayName" name="displayName" placeholder="Enter your desired displayName" value="{{body.displayName}}">
        </label>
        <br>
        </div>
        <div class="form-group">
        <label>Profile Image: (We will allocate a default avatar, if you choose not to upload)
            <div class="custom-file">
                <input type="file" id="profileImage" name="profileImage" value="Choose File">
            </div>
        </label>
        </div>    
        <br>
        <button type="submit" class="btn btn-secondary">Create Account</button>
    </form>

    {{#if error}}
    <div class="alert alert-warning" role="alert">
        {{this.error}}
    </div>
    {{/if}}

    <a href="/site/login">Already have an account? Click here to log-in</a>
</div>