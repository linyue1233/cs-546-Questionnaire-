   <br>
   <label>
       lastName: <br>
      <input type="text" name="lastName" placeholder="{{lastName}}" value="{{lastName}}" class="full-width-input"/>
    </label>
   <br>

    <label>
       Profile Picture: <br>
      <input type="file" name="profileImage"  value="{{profileImage}}" class="full-width-input"/>
    </label>
   <br>
  
    </label> 
