{{#if user}}
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <a href="/communities/create/new"><button class="btn btn-info btn-sm" type="button">Create Community</button></a>&nbsp;
  <a href="/questions/create/new"><button class="btn btn-info btn-sm" type="button">Add question</button></a>&nbsp;
  <button class="btn btn-info btn-sm" type="button">Change Password</button>
</div>
<h2>{{user.displayName}}</h2>
<div>{{user.firstName}} {{user.lastName}}</div>
<div>Email : {{user.emailAddress}}</div>
<div>Communities : {{user.subscribedCommunities}}</div>
{{/if}}
{{#if error}}
<p>{{ error }}</p>
{{/if}}