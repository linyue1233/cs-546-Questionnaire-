<h1>Edit Community "{{community.name}}"</h1>
<form id="editcom-form" action="/communities/{{community._id}}/" name="com_edit_form" onsubmit="return validateAdmin()" method="post">
<div class="form-group">
  <label for="name">Name</label>
  <input type="text" class="form-control" name="title" placeholder="Community Title" value="{{community.name}}" required/>
</div>
<div class="form-group">
  <label for="description">Description</label><br>
  <input type="textarea" class="form-control" name="description" placeholder="Community Description" value="{{community.description}}" required/>
  </div>
  <div class="form-group">
    <label for="admin">Administrator</label><br>
  <select class="form-control" id="admin" name="administrator" required>
    <option disabled>Choose an administrator from these subscribed users</option>
    {{#if (eq this.userId loggedInUserId)}}
    <option selected value="{{this.userId}}">{{this.displayName}}</option>
    {{/if}}
    {{#each subscribedUsers}}
    <option value="{{this.userId}}">{{this.displayName}}</option>
    {{/each}}
  </select>
  </div>
  <input name="_method" type="hidden" value="PUT" />
  <div class="form-group">
  <input class="btn btn-primary float-right" type="submit" value="Submit" />
  </div>
</form>
<br>
<br>
<br>
{{#if error}}
<div class="m-4 alert alert-warning" role="alert">
  {{error}}
  </div>
{{/if}}