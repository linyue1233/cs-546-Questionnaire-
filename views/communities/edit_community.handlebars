<h1>Edit Community {{community.title}}</h1>
<form action="/communities/{{community._id}}/" name="com_edit_form" onsubmit="return validateAdmin()" method="post">
  <label for="name">Name</label><br>
  <input type="text" name="name" placeholder="Community Title" value="{{community.name}}" required/><br><br>
  <label for="description">Description</label><br>
  <input type="textarea" name="description" placeholder="Community Description" value="{{community.description}}" required/><br><br>
  <select name="administrator">
    <option value="">Choose An administrator</option>
    {{#each subscribedUsers}}
    <option value="{{this.userId}}">{{this.displayName}}</option>
    {{/each}}
  </select><br><br>
  <input name="_method" type="hidden" value="PUT" />
  <input type="submit" value="Submit" />
</form>

{{#if error}}
  <p> {{error}} </p>
{{/if}}