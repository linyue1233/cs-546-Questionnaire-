{{!-- shows a page where the user can see the community details--}}
<h1>community title:{{communityInfo.community.name}}</h1>

<h2 id="test">community description:{{communityInfo.community.description}}</h2>

{{!-- {{#if isSubscribed}}
<button onclick="userSubscribe(true)">unSubscribe</button>
{{else}}
<button onclick="userSubscribe(false)">subscribe</button>
{{/if}} --}}

<button id="btnSubscribe" data-subscribeStatus="{{isSubscribed}}"></button>



{{#if communityInfo.questions.length}}
<ul>
    {{#each communityInfo.questions}}
    <li>
        <a href="/questions/{{this._id}}">{{this.title}}</a>
        <p>{{this.description}}</p>
    </li>
    {{/each}}
</ul>
{{else}}
<p>There are no questions in this community now. You can post first question.</p>
{{/if}}
